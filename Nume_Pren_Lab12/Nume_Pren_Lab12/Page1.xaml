<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nume_Pren_Lab12.Page1"
             BackgroundImageSource="MetroWelcome.png">
    
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="End" HorizontalOptions="FillAndExpand">

            <!--<Image Source="MetroWelcome.png" ></Image>-->
            
            
            <Entry x:Name="Username" Placeholder="Username"  TextColor="White" PlaceholderColor="White"></Entry>
            <Entry x:Name="Password" Placeholder="Password" IsPassword="True" TextColor="White" PlaceholderColor="White"></Entry>
            <Button
                VerticalOptions="Center"
                Text="Login"
                TextColor="White"
                BackgroundColor="Transparent"
                BorderColor="DodgerBlue"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="Button_Clicked"
                ></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>